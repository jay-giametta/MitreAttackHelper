@page
@model MitreAttackHelper.Pages.Modal.IntrusionSetMatchModel

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Top Matching Intrusion Sets</h5>
        </div>
        <div class="modal-body">
            @if (Model.CombinedIntrusionSetData.Any())
            {
                foreach ((string Name, string Id, int Count) in Model.CombinedIntrusionSetData)
                {
                    <span>@Name - @Count</span>
                    <br />
                }
            }
            else
            {
                <span>No Results Found</span>
                <br />
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" onclick="$('#modal').modal('hide')">Close</button>
        </div>
    </div>
</div>